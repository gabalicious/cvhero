{
  "verbose": true,
  "watch": ["app-config.yaml", "server/*", "config/*", "package.json"],
  "restartable": "rs",
  "ignore": [".git", "node_modules/**", "yamlData/**"],
  "execMap": {
    "js": "node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
